<Window x:Class="WAR_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WAR_Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Image Stretch="UniformToFill" Source="images/img.png" Height="450" Width="800"></Image>
        <TextBlock Name="VersionText" VerticalAlignment="Top"  HorizontalAlignment="Right" FontSize="20" Foreground="#FFF91818" Margin="0, 0, 5, 0"/>
        <TextBlock Name="FileNameText" VerticalAlignment="Top"  HorizontalAlignment="Center" FontSize="20" Foreground="#FFF91818" Margin="0, 0, 5, 0"/>
        <Button Name="PlayButton" Content="Checking For Updates"   Click="PlayButton_Click" Height="60" FontSize="28" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,364,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="150" Background="#FFFF9700" Padding="10,1,10,1" RenderTransformOrigin="-0.375,-0.406"/>
        <Button Content="Select File" Click="SelectFile_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="712,366,0,0"/>

    </Grid>
</Window>
